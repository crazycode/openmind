<%content_for :head do -%>
      <%= theme_stylesheet_link_tag 'forms' %>
      <%= theme_stylesheet_link_tag 'tables' %>
      <%= javascript_include_tag "tablecloth" %>                
<%end%>
<%content_for :bodyTag do -%>
	<%= set_focus_to_id 'forum_search' -%>              
<%end%>
<%= javascript_include_tag "wz_tooltip.js" %> 
<div id="actionButtons2">
  <%= link_to 'Create New Topic', new_topic_path(:forum_id => @forum.id),
        html_options = {:class=> "button",
        :onmouseover => "Tip('Create a new topic')"}%>
  <% if sysadmin? %>
        <%= link_to 'Edit', edit_forum_url(@forum), html_options = {:class=> "button",
            :onmouseover => "Tip('Edit this forum')"} %>
  <% end %>
  <%= link_to 'List Forums', forums_path , html_options = {:class=> "button",
        :onmouseover => "Tip('Return to list forums')"}%>
  <%= show_forum_watch_button @forum %>
</div>

<br/>
<% form_tag(search_topics_path, :class => 'cssform widerLabel', :name => 'search' ) do -%>
	<p>
        <label for="search">Search Forum:</label>
        <%= text_field_tag 'search', 
	        "", 
	        options = { :id => "forum_search", :size => "50" } %>
		<%= hidden_field_tag(:forum_id, value = @forum.id) %>
        <%= submit_tag 'Search', html_options = {:name => nil, :class=> "button",
	        	:onmouseover => "Tip('Search topics and topic comments')"} %>
	</p>
<% end %>

<div class="formTitle">
  <%= theme_image_tag("icons/16x16/forums.png", options = {:alt=>"Forum"}) %>
  Forum: <%= h @forum.name %>
</div>
<div class="cssform">
  <%= h @forum.description %>
  <% if can_edit? @forum %>
    <p>
      <label>Mediators:</label><br />
      <% for user in @forum.mediators %>
        &bull;&nbsp;<%= h user_display_name(user) %><br />
      <% end %>
    </p>
  <% end %>
</div>
<h1>Topics</h1>
<table cellspacing="0" cellpadding="0" class="cssform">
  <tr>
    <th>Title</th>
    <th>Started By</th>
    <th>Replies</th>
    <th>Views</th>
    <th>Last Post</th>
    <th>Action</th>
  </tr>
    <%=render(:partial => "topic_item", :collection => @forum.topics)%>
</table>
