<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <title></title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta http-equiv="Content-Language" content="en-us" />
    <style type="text/css" media="screen">
      /* common
      --------------------------------------------------*/
      body {
        margin: 0px;
        padding: 0px;
        color: #666;
        background-color: #A5A4A4;
      }
      #BodyImposter {
        color: #666;
        background-color: #A5A4A4;
        width: 100%;
        margin: 0px;
        padding: 15px 0 0 0;
        text-align: center;
      }
      #BodyImposter li, #BodyImposter p, #BodyImposter td {
        font-size: 12px;
        line-height: 1.5em;
        font-family: Helvetica, Arial, sans-serif;
        text-align: justify;
      }
      
      #BodyImposter p, #BodyImposter ol, #BodyImposter ul {
        margin: 0em 0em 1em 0em;
      }
      
      #BodyImposter small {
        font-size: 10px;
        line-height: 1.3em;
      }
      #BodyImposter ol {
        padding-left: 1em;
      }
      #Primary ul {
        padding-left: 1em;
        padding-right: 1em;
      }
      #BodyImposter ol li {
        margin: 0px;
        padding: 0px;
      }
      #BodyImposter ul li {
        padding: 0px 0px 0px 8px;
        margin: 0px;
        list-style: none;
      }
      
      /* links
      --------------------------------------------------*/
      
      #BodyImposter a {
        text-decoration: underline;
      }
      #Primary a:link, #Primary a:visited {
        color: #000;
        background: #fff;
      }
      #Helpful a:link, #Helpful a:visited, #Legal a:link, #Legal a:visited {
        color: #666;
        background: transparent;
      }
      #BodyImposter a:hover {
        text-decoration: none;
      }
      #BodyImposter a:active {
        color: #000;
        background: #fff;
        text-decoration: none;
      }
      
      /* heads
      --------------------------------------------------*/
      
      #BodyImposter h1, #BodyImposter h2 {
        color: #4F4F4F;
        background-color: #fff;
        font-family: Georgia, Palatino, serif;
        font-weight: normal;
        line-height: normal;
        margin: 0em 0em 0.5em 0em;
        padding: 0px;
        text-align: left;
      }
      
      
      #Masthead h1 {
        font-size: 36px;
        color: #fff;
        background: #232122;
        margin: 0px;
      }
      #Primary h2 {
        font-size: 22px;
        padding-bottom: 5px;
        border-bottom: dotted 1px #999;
      }
      
      /* boxes
      --------------------------------------------------*/
      
      #Box {
        color: #666;
        background: #fff;
        border: 1px solid #d3d3d3;
        margin: 0px auto;
      }
      #Content {
        border: 1px solid #d3d3d3;
      }
      #Helpful, #Legal {
        margin: 0px auto;
      }
      #Helpful p, #Legal p {
        margin: 0px;
        padding: 0px;
        text-align: center;
      }
      #Masthead {
        color: #fff;
        background: #232122;
      }
      #Masthead h1, #Masthead p {
        text-align: left;
      }
      #Masthead p {
        font-size: 14px;
        margin: 0px;
      }
      #Masthead p #Date {
        float: right;
        font-size: 12px;
      }
      #Masthead {
        width: 100%;
        text-align: center;
      }
      
    </style>
  </head>
  <body>
    <div id="BodyImposter" style="color: #666; background-color: #CCCCCC;">
      <table id="Box" cellspacing="0" cellpadding="15" width="580" style="color: #666; background-color: #fff;">
        <tr>
          <td>
            <table id="Masthead" cellspacing="0" cellpadding="0" width="580">
              <tr>
                <td style="color: #ccc; background: #333; text-align:right;font-family: Helvetica, Arial, sans-serif;">
                  <img src="<%= @email_image_url %>/emailHeader.jpg" />
                  <span id="Date" style="padding-right:10px;"><%= @date_stamp %></span>
                </td>
              </tr>
            </table>
            <table id="Content" cellspacing="0" cellpadding="20" width="580" style="color: #666; background-color: #fff;">
              <tr valign="top">
                <td id="Primary" style="font-family: Helvetica, Arial, sans-serif;">
                  <!-- INSERT CONTENT HERE -->
                  <h2 style="font-family: Georgia, Palatino, serif;">OpenMind Forums</h2>
                  <p>Dear <%= @user.full_name %>,</p>
                  <p>You are watching topics that have new comments.</p>
                  <% for topic in @topics %>
                    <table width="100%" style="border-bottom:dotted 1px #999;">
                      <tr>
                        <td align="right"><b>Forum:</b></td>
                        <td><%= topic.forum.name %></td>
                      </tr>
                      <tr>
                        <td align="right"><b>Topic:</b></td>
                        <td><%= topic.title %></td>
                      </tr>
                      <% for comment in topic.unread_comments(@user) %>
                        <tr>
                          <td align="right" valign="top">
                            <b><%= comment.user.display_name %> wrote at<br/><%= comment.created_at.strftime("%b %d, %Y %I:%M%p") %>:</b>
                          </td>
                          <td valign="top"><%= comment.body %></td>
                        </tr>
                      <% end %>
                    </table>
                  <% end %>
                  <br/>
                  <br/>
                  <!-- END CONTENT HERE -->
                </td>
              </tr>
            </table>
          </td>
        </tr>
      </table>
      <table id="Legal" cellspacing="0" cellpadding="15" width="610">
        <tr>
          <td style="font-family: Helvetica, Arial, sans-serif;">
            <p>Powered by <a href="#">Openmind</a> v<%= OpenmindVersion.version %><span class="separator">|</span>Distributed under the GNU GPL license</p>
          </td>
        </tr>
      </table>
    </div>
  </body>
</html>